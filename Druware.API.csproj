  <ItemGroup>
    <ProjectReference Include="..\Druware.Extensions\Druware.Extensions.csproj">
      <GlobalPropertiesToRemove></GlobalPropertiesToRemove>
    </ProjectReference>
    <ProjectReference Include="..\Druware.Server.Content.Controllers\Druware.Server.Content.Controllers.csproj">
